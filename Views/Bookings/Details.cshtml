@model ASP.NETCoreIdentityCustom.Models.Booking

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Washing
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayTextFor(model => model.Washing ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Stain Treatment
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayTextFor(model => model.StainTreatment ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Drying
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayTextFor(model => model.Drying ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            Ironing
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayTextFor(model => model.Ironing ? "Yes" : "No")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingTime)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
