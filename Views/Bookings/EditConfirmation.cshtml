@model ASP.NETCoreIdentityCustom.Models.Booking

@{
    ViewData["Title"] = "Edit Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Confirmation</h1>

<h3>Are you sure you want to apply the following changes to this booking?</h3>
<div>
    <h4>Current Booking Details</h4>
    <dl class="row">
        
    </dl>

    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <input type="submit" value="Apply Changes" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
