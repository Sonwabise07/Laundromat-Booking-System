@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <section class="inner-banner py-5">
        <div class="w3l-breadcrumb py-lg-5">
            <div class="container pt-5 pb-sm-4 pb-2">
                <h4 class="inner-text-title font-weight-bold pt-5">Contact Us</h4>
                <ul class="breadcrumbs-custom-path">
                    <li><a href="#">Home</a></li>
                    <li class="active"><i class="fas fa-angle-right mx-2"></i>Contact</li>
                </ul>
            </div>
        </div>
    </section>

    <section class="w3l-w3l-contacts-12 py-5">
        <div class="contact-top py-lg-5 py-md-4 py-2">
            <div class="container">
                <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
                    <h5 class="sub-title">Get In Touch</h5>
                    <h3 class="title-style">Contact Us</h3>
                </div>
                <div class="row">
                    <div class="col-md-8 contacts12-main">
                        <!-- Contact Form -->
                        <form action="https://sendmail.w3layouts.com/submitForm" method="post" class="main-input">
                            <div class="form-group">
                                <input type="text" placeholder="Name" name="w3lName" id="w3lName" required="">
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" placeholder="Email" id="w3lSender" required="">
                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Phone Number" name="phoneNumber" id="phoneNumber" required="">
                            </div>
                            <div class="form-group">
                                <textarea placeholder="Message" name="w3lMessage" id="w3lMessage" required=""></textarea>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-style">Send Now</button>
                            </div>
                        </form>
                        <!-- End of Contact Form -->
                    </div>
                    <div class="col-md-4 ps-lg-5 mt-md-0 mt-4">
                        <h3 class="title-style mb-4">Contact Info</h3>
                        <div class="contact">
                            <p class="contact-text-sub">washmelaundry@gmail.com</p>
                            <p class="contact-text-sub">+27 633693716</p>
                            <p class="contact-text-sub">Sector 428, Mahatma Gandhi Road, <br>POINT DURBAN.</p>
                            <div class="buttons-teams">
                                <a href="#team"><span class="fab fa-facebook-square" aria-hidden="true"></span></a>
                                <a href="#team"><span class="fab fa-twitter-square" aria-hidden="true"></span></a>
                                <a href="#team"><span class="fab fa-google-plus-square" aria-hidden="true"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section py-5">
        <div class="container">
            <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
                <h3 class="title-style">Frequently Asked Questions</h3>
            </div>
            <div class="faq-content">
                <!-- FAQ Questions and Answers -->
                <div class="faq-item">
                    <h5 class="question" data-bs-toggle="collapse" href="#faq1">Q: When will I get my laundry back</h5>
                    <div class="collapse" id="faq1">
                        <p class="answer">A: The whole process takes approximately 3 hours, it can take more depending on the activities of the day. Once your laundry is ready, you will get a notification.</p>
                    </div>
                </div>
                <div class "faq-item">
                    <h5 class="question" data-bs-toggle="collapse" href="#faq2">Q: What are your business hours?</h5>
                    <div class="collapse" id="faq2">
                        <p class="answer">A: We are open every day from 8 AM to 5 PM every day.</p>
                    </div>
                </div>
                <div class "faq-item">
                    <h5 class="question" data-bs-toggle="collapse" href="#faq3">Q: How can I contact customer support?</h5>
                    <div class="collapse" id="faq3">
                        <p class="answer">A: You can reach our customer support team at +27 633693716 or by emailing washmelaundry@gmail.com.</p>
                    </div>
                </div>
                <!-- End of FAQ Questions and Answers -->
            </div>
        </div>
    </section>
</center>
